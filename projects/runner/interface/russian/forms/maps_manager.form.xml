<?xml
	version="1.0"
	encoding="windows-1251"?>
<maps_manager
	use_template_command="template"
	title="Управление картами"
	border="form"
	ground="ground"
	width="100%"
	height="100%">

	<back
		picture="exit"
		left="+20"
		top="-77"/>

	<groups>
		<remove	
			text="Удалить"
			left="+5%"
			top="-115"
			width="35%"
			height="32"/>
		<create
			text="Создать набор"
	   		left="+90"
			right="-90"
			height="35"
			top="-42"/>
		<list
        	left="+5%"
        	top="+48"
        	right="center-32"
        	bottom="-115">
			<up
				picture="up"
				left="center-32"
				top="+48"/>
			<down
				picture="down"
				left="center-32"
				top="-115"/>
			<info
				text="Наборы"
				align="right"
				left="+5%"
				top="+26"
				width="40%"
				height="29"/>
		</list>
	</groups>

	<maps
		template="groups">
		<create		top="-80"		text="Создать карту"/>
		<remove		left="+55%"/>		
		<open
			picture="editor"
			left="-84"
			top="-77"/>
		<list      	left="+55%"	right="-32">
			<up		left="+90%"/>
			<down	left="+90%"/>
			<info	left="+50%"	text="Карты"/>
		</list>
	</maps>
</maps_manager>